@page
@model LoginModel
@{
    Layout = "_GymLayout";
    ViewData["Title"] = "Login";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("/Gym_Tem/img/breadcrumb-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Login</h2>
                    <div class="bt-option">
                        <a asp-page="/Index">Home</a>
                        <a href="#">Account</a>
                        <span>Login</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Login Section Begin -->
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <!-- Left column (info) -->
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <span>Welcome back</span>
                    <h2>Log in to continue</h2>
                </div>

                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-lock"></i>
                        <p>Your account is protected by ASP.NET Core Identity.</p>
                    </div>
                    <div class="cw-text email">
                        <i class="fa fa-envelope"></i>
                        <p>Need help? Contact support.</p>
                    </div>
                </div>
            </div>

            <!-- Right column (form) -->
            <div class="col-lg-6">
                <div class="leave-comment">
                    <form id="account" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                        <input type="hidden" asp-for="ReturnUrl" />

                        <input asp-for="Input.Email" class="" placeholder="Email" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <input asp-for="Input.Password" class="" placeholder="Password" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <a asp-area="Identity" asp-page="/Account/ForgotPassword">Forgot password?</a>
                        </div>

                        <button id="login-submit" type="submit" class="site-btn">Login</button>
                    </form>

                    @* External logins *@
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4" />
                        <div>
                            <p>Or sign in with:</p>
                            <form method="post" asp-page-handler="ExternalLogin">
                                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="site-btn" style="margin-right:8px"
                                            name="provider" value="@provider.Name">
                                        @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Login Section End -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
