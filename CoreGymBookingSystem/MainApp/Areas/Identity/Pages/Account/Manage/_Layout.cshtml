@{
    Layout = "/Pages/Shared/_GymLayout.cshtml";
}

<section class="spad manage-wrapper">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-3 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body p-0">
                        <partial name="_ManageNav" />
                    </div>
                </div>
            </div>

            <!-- Body -->
            <div class="col-lg-9">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
