@using DAL.Entities
@inject SignInManager<User> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<ul class="nav nav-pills flex-column manage-nav">
    <li class="nav-item">
        <a class="nav-link d-flex align-items-center @ManageNavPages.IndexNavClass(ViewContext)"
           id="profile" asp-page="./Index">
            <i class="fa fa-user me-2"></i> Profile
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link d-flex align-items-center @ManageNavPages.EmailNavClass(ViewContext)"
           id="email" asp-page="./Email">
            <i class="fa fa-envelope me-2"></i> Email
        </a>
    </li>

    <li class="nav-item">
        <a class="nav-link d-flex align-items-center @ManageNavPages.ChangePasswordNavClass(ViewContext)"
           id="change-password" asp-page="./ChangePassword">
            <i class="fa fa-lock me-2"></i> Password
        </a>
    </li>

    @if (hasExternalLogins)
    {
        <li id="external-logins" class="nav-item">
            <a id="external-login"
               class="nav-link d-flex align-items-center @ManageNavPages.ExternalLoginsNavClass(ViewContext)"
               asp-page="./ExternalLogins">
                <i class="fa fa-plug me-2"></i> External logins
            </a>
        </li>
    }
