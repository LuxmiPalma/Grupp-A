@page
@model ChangePasswordModel
@{
    Layout = "_GymLayout";
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("~/Gym_Tem/img/breadcrumb-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>@ViewData["Title"]</h2>
                    <div class="bt-option">
                        <a asp-page="/Index">Home</a>
                        <a asp-area="Identity" asp-page="/Account/Manage/Index">Account</a>
                        <span>Change password</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Change Password Section Begin -->
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="contact-widget">
                    <div class="section-title contact-title">
                        <span>Account</span>
                        <h2>My Settings</h2>
                    </div>
                    <partial name="_ManageNav" />
                </div>
            </div>

            <!-- Form -->
            <div class="col-lg-8">
                <div class="leave-comment">
                    <partial name="_StatusMessage" for="StatusMessage" />

                    <form id="change-password-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <input asp-for="Input.OldPassword"
                               class="form-control mb-3"
                               type="password"
                               autocomplete="current-password"
                               aria-required="true"
                               placeholder="Current password" />
                        <span asp-validation-for="Input.OldPassword" class="text-danger"></span>

                        <input asp-for="Input.NewPassword"
                               class="form-control mb-3"
                               type="password"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="New password" />
                        <span asp-validation-for="Input.NewPassword" class="text-danger"></span>

                        <input asp-for="Input.ConfirmPassword"
                               class="form-control mb-3"
                               type="password"
                               autocomplete="new-password"
                               aria-required="true"
                               placeholder="Confirm new password" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                        <button type="submit" class="site-btn mt-2">Update password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Change Password Section End -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
