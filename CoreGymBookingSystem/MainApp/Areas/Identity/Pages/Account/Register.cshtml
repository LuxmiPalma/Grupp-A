@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@model RegisterModel
@{
    Layout = "_GymLayout";
    ViewData["Title"] = "Register";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("/Gym_Tem/img/breadcrumb-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Register</h2>
                    <div class="bt-option">
                        <a asp-page="/Index">Home</a>
                        <a href="#">Account</a>
                        <span>Register</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Register Section Begin (reuses contact styling) -->
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <!-- Left column (info) -->
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <span>Create Account</span>
                    <h2>Get started in seconds</h2>
                </div>

                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-check"></i>
                        <p>Get access to classes, schedule, and your profile.</p>
                    </div>
                    <div class="cw-text">
                        <i class="fa fa-info-circle"></i>
                        <p>
                            Already have an account?
                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl">Log in here</a>.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Right column (form) -->
            <div class="col-lg-6">
                <div class="leave-comment">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <input asp-for="Input.Email" placeholder="Email" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <input asp-for="Input.Password" placeholder="Password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <input asp-for="Input.ConfirmPassword" placeholder="Confirm password" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

                        <div class="">
                            <div class="form-check">
                                <input asp-for="Input.UserRole" class="form-check-input" type="radio" value="Admin" />
                                <label asp-for="Input.UserRole" class="form-check-label text-white">Admin</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Input.UserRole" class="form-check-input" type="radio" value="Member" />
                                <label asp-for="Input.UserRole" class="form-check-label text-white">Member</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Input.UserRole" class="form-check-input" type="radio" value="Trainer" />
                                <label asp-for="Input.UserRole" class="form-check-label text-white">Trainer</label>
                            </div>
                        </div>

                        <!-- (optional) Password hint -->
                        <p class="mt-5" style="opacity:.8; font-size:14px;">
                            Tip: At least 6 characters (or per your Identity settings).
                        </p>

                        <div class="mb-4">
                            <button id="registerSubmit" type="submit" class="site-btn">Register</button>
                        </div>
                    </form>

                    @* External sign-in/registration (shown if configured) *@
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4" />
                        <div>
                            <p>Or register/sign in with:</p>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="site-btn" style="margin-right:8px"
                                            name="provider" value="@provider.Name">
                                        @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Register Section End -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
