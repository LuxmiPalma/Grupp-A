@page
@model RegisterModel
@{
    Layout = "_GymLayout";
    ViewData["Title"] = "Registrera";
}

<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("/Gym_Tem/img/breadcrumb-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Registrera</h2>
                    <div class="bt-option">
                        <a asp-page="/Index">Hem</a>
                        <a href="#">Konto</a>
                        <span>Registrera</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Register Section Begin (återanvänder kontakt-styling) -->
<section class="contact-section spad">
    <div class="container">
        <div class="row">
            <!-- Vänster kolumn (info) -->
            <div class="col-lg-6">
                <div class="section-title contact-title">
                    <span>Skapa konto</span>
                    <h2>Kom igång på några sekunder</h2>
                </div>

                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-check"></i>
                        <p>Få åtkomst till klasser, schema och din profil.</p>
                    </div>
                    <div class="cw-text">
                        <i class="fa fa-info-circle"></i>
                        <p>
                            Har du redan ett konto?
                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Model.ReturnUrl">Logga in här</a>.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Höger kolumn (form) -->
            <div class="col-lg-6">
                <div class="leave-comment">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <input asp-for="Input.Email" placeholder="E-post" autocomplete="username" aria-required="true" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>

                        <input asp-for="Input.Password" placeholder="Lösenord" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>

                        <input asp-for="Input.ConfirmPassword" placeholder="Bekräfta lösenord" autocomplete="new-password" aria-required="true" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>


                        <input asp-for="Input.UserRole" type="radio" value="Admin" />
                        <label asp-for="Input.UserRole">Administrator</label> <br />

                        <input asp-for="Input.UserRole" type="radio" value="Member" />
                        <label asp-for="Input.UserRole">Member</label> <br />

                        <input asp-for="Input.UserRole" type="radio" value="Trainer" />
                        <label asp-for="Input.UserRole">Trainer</label> <br />

                        <!-- (valfritt) Lösenords-hint -->
                        <p class="mt-2" style="opacity:.8; font-size:14px;">
                            Tips: Minst 6 tecken (eller enligt dina Identity-inställningar).
                        </p>

                        <button id="registerSubmit" type="submit" class="site-btn">Registrera</button>
                    </form>

                    @* Externa inloggningar/registrering (visas om konfigurerade) *@
                    @if ((Model.ExternalLogins?.Count ?? 0) > 0)
                    {
                        <hr class="my-4" />
                        <div>
                            <p>Eller registrera dig/logga in med:</p>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="site-btn" style="margin-right:8px"
                                            name="provider" value="@provider.Name">
                                        @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Register Section End -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
