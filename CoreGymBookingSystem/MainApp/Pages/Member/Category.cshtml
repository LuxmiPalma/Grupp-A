@page
@using Microsoft.AspNetCore.Authorization
@model MainApp.Pages.Member.CategoryModel
@attribute [Authorize(Roles = "Member")]
@{
    ViewData["Title"] = "Category search";
    Layout = "_GymLayout";
}

<!-- HERO / BREADCRUMB -->
<section class="breadcrumb-section set-bg" data-setbg="/Gym_Tem/img/breadcrumb-bg.jpg">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-12 col-lg-10">
                <div class="breadcrumb-text">
                    <div class="bt-option">
                        <a href="/Index">Home</a>
                        <span>Start</span>
                    </div>
                    <p class="mt-2">Find your next class by category and get started right away.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Inline search on hero -->
    <div class="row justify-content-center mt-4">
        <div class="col-12 col-lg-8">
            <form method="get" class="shadow rounded-3 p-3 p-md-4">
                <label for="CategoryInput" class="form-label text-white-50">Search by category</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text bg-transparent border-2 text-white-50" id="search-addon" aria-hidden="true">
                        <!-- magnifier icon (svg, no external deps) -->
                        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Search icon">
                            <path d="M21 21l-4.3-4.3" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                            <circle cx="11" cy="11" r="7" stroke="currentColor" stroke-width="2" />
                        </svg>
                    </span>
                    <input type="text" class="form-control form-control-lg border-2" id="CategoryInput" name="SelectedCategory" value="@Model.SelectedCategory" placeholder="e.g. Yoga, Cardio, Strength…" aria-describedby="search-addon" />
                    <button class="btn btn-primary px-4" type="submit">Search</button>
                    <a href="@Url.Page(null, new { SelectedCategory = (string?)null })" class="btn btn-outline-secondary" title="Clear">
                        Clear
                    </a>
                </div>

                <!-- Quick picks -->
                <div class="mt-3 d-flex flex-wrap gap-2">
                    @foreach (var c in new[] { "Yoga", "Running", "Weightloss", "Cardio", "Bodybuilding", "Nutrition" })
                    {
                        <button type="button" class="btn btn-sm btn-outline-light rounded-pill quick-cat" data-value="@c">@c</button>
                    }
                </div>
            </form>
        </div>
    </div>
</section>


<!-- RESULTS -->
<section class="class-details-section spad">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-8">
                <div class="class-details-text">
                    <div class="cd-single-item">
                        <h2 class="h4 mb-3 text-white">Category search</h2>

                        @if (!string.IsNullOrWhiteSpace(Model.SelectedCategory))
                        {
                            var total = Model.SearchbyCategory?.Count() ?? 0;

                            <div class="d-flex align-items-center justify-content-between gap-2 mb-3">
                                <div class="d-flex align-items-center gap-2">
                                    <span class="badge rounded-pill bg-primary text-uppercase">@Model.SelectedCategory</span>
                                    <span class="text-muted small">@total @((total == 1) ? "result" : "results")</span>
                                </div>
                                <a href="@Url.Page(null, new { SelectedCategory = (string?)null })" class="btn btn-link btn-sm p-0">Clear</a>
                            </div>

                            @if (total > 0)
                            {
                                <div class="card border-0 shadow-sm rounded-3">
                                    <div class="table-responsive">
                                        <table class="table table-sm table-borderless align-middle mb-0">
                                            <thead class="border-bottom">
                                                <tr class="text-uppercase text-secondary small">
                                                    <th scope="col">Session</th>
                                                    <th scope="col" class="text-end">Category</th>
                                                </tr>
                                            </thead>
                                            <tbody id="sess-tbody">
                                                @foreach (var s in Model.SearchbyCategory!)
                                                {
                                                    <tr class="border-bottom subtle-row">
                                                        <td>
                                                            <div class="fw-semibold text-body">@s.Title</div>
                                                            <div class="text-muted small text-truncate-2" title="@s.Description">@s.Description</div>
                                                        </td>
                                                        <td class="text-end">
                                                            <span class="badge rounded-pill bg-secondary">@s.Category</span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div id="sess-empty" class="text-center py-5">
                                    <p class="mb-1 fw-semibold">No sessions matched your filters.</p>
                                    <p class="text-muted small mb-3">Try another category or tweak your search.</p>
                                    <a href="@Url.Page(null, new { SelectedCategory = (string?)null })" class="btn btn-outline-secondary btn-sm rounded-pill">
                                        Clear filter
                                    </a>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-light text-dark border-secondary" role="status">
                                Start by typing a category above or pick one of the quick suggestions.
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- SIDEBAR -->
            <div class="col-12 col-lg-4 mt-5 mt-lg-0">
                <div class="sidebar-option">
                    <div class="so-categories">
                        <h5 class="title">Categories</h5>
                        <ul class="list-unstyled m-0">
                            <li><a href="#" class="cat-link" data-value="Yoga">Yoga <span>12</span></a></li>
                            <li><a href="#" class="cat-link" data-value="Running">Running <span>32</span></a></li>
                            <li><a href="#" class="cat-link" data-value="Weightloss">Weightloss <span>86</span></a></li>
                            <li><a href="#" class="cat-link" data-value="Cardio">Cardio <span>25</span></a></li>
                            <li><a href="#" class="cat-link" data-value="Bodybuilding">Bodybuilding <span>36</span></a></li>
                            <li><a href="#" class="cat-link" data-value="Nutrition">Nutrition <span>15</span></a></li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>




@section Scripts {
    <script>
        // Quick category chips + sidebar links -> set input + submit
        (function () {
            const input = document.getElementById('CategoryInput');
            const form = input?.closest('form');
            document.querySelectorAll('.quick-cat, .cat-link').forEach(btn => {
                btn.addEventListener('click', e => {
                    e.preventDefault();
                    const val = btn.getAttribute('data-value');
                    if (!val || !input || !form) return;
                    input.value = val;
                    form.submit();
                });
            });
        })();

        (function(){
            const field = document.getElementById('CategoryInput');
            if(!field) return;
            field.addEventListener('focus', () => field.classList.add('shadow'));
            field.addEventListener('blur', () => field.classList.remove('shadow'));
        })();
    </script>

}
