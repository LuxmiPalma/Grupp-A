﻿@using DAL.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="description" content="Gym Template">
    <meta name="keywords" content="Gym, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - Core Gym Club</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500,600,700&display=swap" rel="stylesheet">

    <!-- CSS Files -->
    <link rel="stylesheet" href="~/Gym_Tem/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Tem/css/font-awesome.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Tem/css/flaticon.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Tem/css/owl.carousel.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Tem/css/barfiller.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Tem/css/magnific-popup.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Tem/css/slicknav.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gym_Tem/css/style.css" asp-append-version="true" />
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Section Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="canvas-close">
            <i class="fa fa-close"></i>
        </div>
        <div class="canvas-search search-switch">
            <i class="fa fa-search"></i>
        </div>
        <nav class="canvas-menu mobile-menu">
            <ul>
                <li><a asp-page="/Index">Home</a></li>
                <li><a asp-page="/About">About Us</a></li>
                <li><a asp-page="/ClassDetails">Events</a></li>
                <li><a asp-page="/Services">Services</a></li>
                <li><a asp-page="/Team">Our Team</a></li>
                <li><a asp-page="/Contact">Contact</a></li>
                @if (SignInManager.IsSignedIn(User))
                {
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index">Hej @User.Identity?.Name!</a></li>
                    <li>
                        <form method="post" asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" style="display:inline;">
                            <button class="nav-link btn btn-link p-0">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                }

                @if (SignInManager.IsSignedIn(User))
                {
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index">My Page</a></li>
                }





            </ul>
        </nav>
        <div id="mobile-menu-wrap"></div>
        <div class="canvas-social">
        </div>
    </div>
    <!-- Offcanvas Menu Section End -->
    <!-- Header Section Begin -->
    <header class="header-section">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-3">
                    <div class="logo">
                        <a asp-page="/Index">
                            <img src="~/Gym_Tem/img/logo.png" alt="Gym Logo">
                        </a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <nav class="nav-menu">
                        <ul>

                            @if (!SignInManager.IsSignedIn(User))
                            {


                            }
                            else
                            {
                                @* Logged in *@

                                @if (User.IsInRole("Admin"))
                                {
                                    <li><a asp-area="Identity" asp-page="/Account/Register">Create Account</a></li>
                                    <li><a asp-page="/Admin/Dashboard">Dashboard</a></li>

                                }
                                else if (User.IsInRole("Member"))
                                {
                                   
                                    <li><a asp-page="/Member/Category">Home</a></li>
                                    <li><a asp-page="/ClassDetails">Events</a></li>

                                    
                                }



                                else if (User.IsInRole("Trainer"))
                                {
                                    <li class="active"><a asp-page="/Index">Home</a></li>
                                   
                                    <li><a asp-page="/Trainer/Dashboard">Dashboard</a></li>
                                   

                                }
                            }

                        </ul>


                    </nav>
                </div>
                <div class="col-lg-3">
                    <div class="top-option">

                        <div class="to-social">
                            <ul>
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index">Hej @User.Identity?.Name!</a></li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout"
                                              asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" style="display:inline;">
                                            <button class="nav-link btn btn-link p-0">Logout</button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>

                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="canvas-open">
                <i class="fa fa-bars"></i>
            </div>
        </div>
    </header>
    <!-- Header End -->
    <!-- Main Content -->
    <main role="main">
        @RenderBody()
    </main>


    <!-- JS Plugins -->
    <script src="~/Gym_Tem/js/jquery-3.3.1.min.js"></script>
    <script src="~/Gym_Tem/js/bootstrap.min.js"></script>
    <script src="~/Gym_Tem/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Gym_Tem/js/masonry.pkgd.min.js"></script>
    <script src="~/Gym_Tem/js/jquery.barfiller.js"></script>
    <script src="~/Gym_Tem/js/jquery.slicknav.js"></script>
    <script src="~/Gym_Tem/js/owl.carousel.min.js"></script>
    <script src="~/Gym_Tem/js/main.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>