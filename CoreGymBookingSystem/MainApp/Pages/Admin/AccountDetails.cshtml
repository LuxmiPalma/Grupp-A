@page
@model AdminUsersModel
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@{
    Layout = "_GymLayout";
    ViewData["Title"] = "Admin – Users";
}

<section class="breadcrumb-section set-bg" data-setbg="@Url.Content("/Gym_Tem/img/breadcrumb-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb-text">
                    <h2>Admin – Users</h2>
                    <div class="bt-option">
                        <a asp-page="/Index">Home</a>
                        <span>Admin Panel</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="contact-section spad">
    <div class="container">

        <div class="row mb-4">
            <div class="col-lg-12">
                <div class="section-title contact-title">
                    <span>Overview</span>
                    <h2>Users by Role</h2>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-shield"></i>
                        <p><strong>Admins (@Model.Admins.Count)</strong></p>
                        <ul style="margin:0;padding-left:18px;">
                            @foreach (var u in Model.Admins)
                            {
                                <li>@u.Email</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-user"></i>
                        <p><strong>Trainers (@Model.Trainers.Count)</strong></p>
                        <ul style="margin:0;padding-left:18px;">
                            @foreach (var u in Model.Trainers)
                            {
                                <li>@u.Email</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="contact-widget">
                    <div class="cw-text">
                        <i class="fa fa-users"></i>
                        <p><strong>Members (@Model.Members.Count)</strong></p>
                        <ul style="margin:0;padding-left:18px;">
                            @foreach (var u in Model.Members)
                            {
                                <li>@u.Email</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- All Users -->
        <div class="row">
            <div class="col-lg-12">
                <div class="class-details-text">
                    <div class="cd-single-item">
                        <h3>All Users (@Model.AllUsers.Count)</h3>
                        <div class="table-responsive">
                            <table class="table table-borderless" style="color:#fff;">
                                <thead>
                                    <tr>
                                        <th style="border-bottom:1px solid rgba(255,255,255,.15)">Email</th>
                                        <th style="border-bottom:1px solid rgba(255,255,255,.15)">Roles</th>
                                        <th style="border-bottom:1px solid rgba(255,255,255,.15)">Email Confirmed</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var u in Model.AllUsers)
                                    {
                                        <tr>
                                            <td>@u.Email</td>
                                            <td>
                                                @foreach (var r in u.Roles)
                                                {
                                                    <span class="badge" style="background:#ff5f13; margin-right:6px;">@r</span>
                                                }
                                                @if (u.Roles.Count == 0)
                                                {
                                                    <em>No role</em>
                                                }
                                            </td>
                                            <td>@(u.EmailConfirmed ? "Yes" : "No")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <a asp-page="/Index" class="site-btn" style="margin-top:10px;">Back</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
