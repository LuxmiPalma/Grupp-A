@page
@model MainApp.Pages.ClassDetailsModel
@{
    Layout = "_GymLayout";
    ViewData["Title"] = "Class Details";
}


<!-- Class Timetable Section Begin -->
<section class="class-timetable-section class-details-timetable spad">
    <div class="container" style="padding-top:100px;">
        <div class="row">
            <div class="col-lg-12">
                <div class="class-details-timetable_title">
                    <h5>Classes timetable</h5>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="class-timetable details-timetable">
                    <table>
                        <thead>
                            <tr>
                                <th></th>
                                <th>Monday</th>
                                <th>Tuesday</th>
                                <th>Wednesday</th>
                                <th>Thursday</th>
                                <th>Friday</th>
                                <th>Saturday</th>
                                <th>Sunday</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var timeSlot in Model.Sessions.GroupBy(s => new { s.StartTime, s.EndTime }))
                            {
                                <tr>
                                    <td class="class-time">
                                        @timeSlot.Key.StartTime.ToString("hh:mm tt") - @timeSlot.Key.EndTime.ToString("hh:mm tt")
                                    </td>

                                    @foreach (var day in new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" })
                                    {
                                        var session = timeSlot.FirstOrDefault(s => s.DayOfWeek == day);

                                        if (session != null)
                                        {
                                            <td class="dark-bg hover-dp ts-meta" data-tsmeta="session">
                                                <a asp-page="/Sessions/SessionDetails" asp-route-id="@session.Id" style="display:block; color:inherit; text-decoration:none;">
                                                    <h5>@session.Title</h5>
                                                    <span>@session.Instructor?.UserName</span>
                                                    <p>@session.Description</p>
                                                    <small>
                                                        Max: @session.MaxParticipants |
                                                        Booked: @session.CurrentBookings |
                                                        Available: @(session.MaxParticipants - session.CurrentBookings)
                                                    </small>
                                                </a>
                                            </td>
                                        }
                                        else
                                        {
                                            <td class="blank-td"></td>
                                        }
                                    }
                                </tr>
                            }
                        </tbody>


                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Class Timetable Section End -->
